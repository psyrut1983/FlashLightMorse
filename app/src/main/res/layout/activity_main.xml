<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCCF53"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Text to Morse Here"
        app:layout_constraintBottom_toTopOf="@+id/my_switch"
        app:layout_constraintEnd_toEndOf="@+id/my_switch"
        app:layout_constraintStart_toStartOf="@+id/my_switch"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/my_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumb="@drawable/rectangle_thumb"
        android:track="@drawable/rectangle_tack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showText="true"

        />

    <Button
        android:id="@+id/btn_morse"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Morse Text"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/my_switch"
        app:layout_constraintStart_toStartOf="@+id/my_switch"
        app:layout_constraintTop_toBottomOf="@+id/my_switch" />



</androidx.constraintlayout.widget.ConstraintLayout>